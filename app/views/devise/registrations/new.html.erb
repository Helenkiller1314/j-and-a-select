<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 user_setup_content">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
      <h2><span class="fa fa-user-circle-o"></span> <%= t('user-sign-up') %></h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, :label => false, placeholder: '请输入常用的邮箱地址', error: '请输入邮箱地址', required: true, autofocus: true %>
          <%= f.input :nickname, :label => false, placeholder: '请输入用戶名', error: '请输入用戶名', required: true %>
          <%= f.input :password, :label => false, placeholder: '请输入6-16位密码', error: '请输入6-16位密码', required: true, input_html: { maxlength: 16 } %>
          <%= f.input :password_confirmation, :label => false, placeholder: '确认密码', error: '请输入相同的密码', required: true, input_html: { maxlength: 16 } %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, t('signup'),class: "button" %>
        </div>
      <% end %>
      <hr />
        <div class="account">
          <%= link_to t('user-had-account'), new_session_path(resource_name) %><br />
        </div>
      </div>
    </div>
  </div>
</div>
