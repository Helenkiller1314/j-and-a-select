<div class="product-box">
  <div class="container">
    <!--=== 商品類型 & 品牌選單 ===-->
    <%= render "common/menu" %>
    <div class='row content-box'>
      <div class='col-md-12'>
        <!--=== 頁面標題 ===-->
        <h3><i class='fa fa-gift'></i> <%= t('account-wish-list-index') %></h3>
        <hr />
        <!--=== 使用者願望清單===-->
        <div class="row">
          <!-- 歷程訂單列表內容 -->
          <% @products.each do |product| %>
            <div class="col-md-12 cart-item-box">
            <!-- 商品圖片 -->
              <%= link_to product_path(product) do %>
                <% if product.product_images.present? %>
                  <!-- 顯示第一張圖片 -->
                  <%= image_tag(product.product_images[0].image.thumb.url)%>
                <% else %>
                  <%= image_tag('http://placehold.it/100x100&text=No Pic') %>
                <% end %>
              <% end %>
              <div class="name"><%= link_to(product.name, product_path(product)) %></div>
              <div class="price">$ <%= product.price %></div>
            <!-- 移動至購物車 -->
              <div>
                <%= link_to add_to_cart_account_product_path(product), method: :post do %>
                  <%= t('btn-move-to-cart') %>
                <% end %>
              </div>
            <!-- 從願望清單上刪除該商品 -->
              <div>
                <%= link_to remove_from_wish_list_account_product_path(product), method: :post do %>
                  <i class='fa fa-close'></i>
                <% end %>
              </div>
              <hr />
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
