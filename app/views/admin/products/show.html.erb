<!--=== 商品資訊 ===-->
<h1> <%= @product.name %> </h1>

<!-- 商品圖片 -->
<p>
  <% if @product_images.present? %>
    <% @product_images.each_with_index do |p, index| %>
        <% if index == 0 %>
          <%= image_tag p.image.medium.url %>
          <br/>
        <% else %>

          <%= image_tag p.image.thumb.url %>
        <% end %>
      <% end %>
  <% else %>
    <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
  <% end %>
</p>

<!-- 所屬主類別 -->
<h3><%= t('f-category-group') %></h3>
<p>
  <%= @product.category.category_group.name %>
</p>

<!-- 所屬類別 -->
<h3><%= t('f-product-category') %></h3>
<p>
  <%= @product.category.name %>
</p>

<!-- 所屬品牌 -->
<h3><%= t('f-product-brand') %></h3>
<p>
  <%= @product.brand.name %>
</p>

<!-- 商品價錢 -->
<h3><%= t('f-product-price') %></h3>
<p>
  <%= @product.price %>
</p>

<!-- 商品庫存 -->
<h3><%= t('f-product-quantity') %></h3>
<p>
  <%= @product.quantity %>
</p>
