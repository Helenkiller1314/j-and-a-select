<!--=== 商品類型 & 品牌選單 ===-->
<%= render "products/menu" %>

<!-- 商品圖片 -->
<div class='col-xs-12 col-md-8'>
  <p>
    <% if @product_images.present? %>
      <% @product_images.each_with_index do |p, index| %>
          <% if index == 0 %>
            <!-- 第一張圖為 medium 尺寸大圖 -->
            <%= image_tag p.image.main.url %>
            <br/>
            <br/>
          <% else %>
            <!-- 其他圖為 thumb 尺寸小圖 -->
            <%= image_tag p.image.other.url %>
          <% end %>
        <% end %>
    <% else %>
      <%= image_tag('http://placehold.it/400x400&text=No Pic', class: 'thumbnail') %>
    <% end %>
  </p>
</div>

<!--=== 商品資訊 ===-->
<div class='col-xs-12 col-md-4'>
  <!-- 商品名稱 -->
  <p>
    <h1> <%= @product.name %> </h1>
  </p>

  <!-- 商品價錢 -->
  <p>
    <h3> $ <%= @product.price %></h3>
  </p>

  <!-- 商品敘述 -->
  <p>
    <%= simple_format(@product.description) %>
  </p>

  <br/>

  <!-- 加入願望清單 -->
  <% if current_user && current_user.is_wish_list_owner_of?(@product) %>
    <label>已收藏</label>
  <% else %>
    <label>未收藏</label>
  <% end %>

  <br/>
  <br/>

  <!-- 加入購物車 -->
  <%= link_to(t('btn-add-to-cart'), add_to_cart_product_path(@product), :method => :post, :class => 'btn btn-lg btn-default') %>

</div>
