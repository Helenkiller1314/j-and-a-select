<div class='row'>
  <div class='col-md-12'>
    <!--=== 頁面標題 ===-->
    <h2><%= t('cart-index') %></h2>

    <%=link_to(t('cart-clear'), clear_carts_path, method: :delete, class: 'pull-right', style: 'text-decoration: underline;', data: { confirm: t('message-confirm-clear-cart') } ) %>

    <!--=== 購物車資訊 ===-->
    <table class='table'>
      <!-- 購物車列表標題 -->
      <thead>
        <tr>
          <th><%= t('f-cart-product-info') %></th>
          <th><%= t('f-cart-product-price') %></th>
          <th><%= t('f-cart-product-quantity') %></th>
          <th></th>
        </tr>
      </thead>
      <!-- 購物車列表內容 -->
      <tbody>
        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to(cart_item.product.name, product_path(cart_item.product)) %>
            </td>
            <td>
              <%= cart_item.product.price %>
            </td>
            <td>
              <%= cart_item.quantity %>
            </td>
            <td>
              <%= link_to cart_item_path(cart_item.product_id), method: :delete do %>
                <i class='fa fa-close'></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br/>
    <!-- 購物車內商品總價 -->
    <div class='totol clearfix'>
      <span class='pull-right'>
        <%= t('f-cart-total') %>
        <%= render_cart_total_price(current_cart) %>
      </span>
    </div>

    <hr/>
    <!--=== 頁面標題 ===-->
    <h2><%= t('checkout-index') %></h2>

    <!--=== 下訂表單 ===-->
    <div class='order-form'>
      <%= simple_form_for @order do |f| %>
        <!-- 訂購人 -->
        <legend><%= t('f-billing-info') %></legend>

        <div class='form-group'>
          <%= f.input :billing_name, :label => t('f-billing-name')%>
        </div>
        <div class='form-group'>
          <%= f.input :billing_address, :label => t('f-billing-address') %>
        </div>

        <!-- 收貨人 -->
        <legend><%= t('f-shipping-info') %></legend>

        <div class='form-group'>
          <%= f.input :shipping_name, :label => t('f-shipping-name') %>
        </div>
        <div class='form-group'>
          <%= f.input :shipping_phone, :label => t('f-shipping-phone') %>
        </div>
        <div class='form-group'>
          <%= f.input :shipping_address, :label => t('f-shipping-address') %>
        </div>

        <!-- 下訂，產生訂單 -->
        <div class='checkout'>
          <%= f.submit t('btn-order-create'), class: 'btn btn-lg btn-default pull-right' %>
        </div>

      <% end %>
    </div>
  </div>
</div>
